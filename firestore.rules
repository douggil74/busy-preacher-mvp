rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Subscriptions - users can read/write their own subscription
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Whitelist - authenticated users can read to check their status
    match /whitelist/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin can write via admin SDK
    }

    // FCM tokens - users can manage their own push notification tokens
    match /fcm_tokens/{tokenId} {
      allow read: if true;
      allow write: if true; // Allow device registration
    }

    // Crisis alerts - only authenticated users can create, admins can read
    match /crisis_alerts/{alertId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Prayer requests - anyone can read and create (community feature)
    match /prayer_requests/{requestId} {
      allow read: if true;
      allow create: if true;
      allow update: if true; // Allow anyone to add hearts
      allow delete: if true; // Allow deletion (admin panel is password-protected)
    }

    // App settings (banner, etc.) - everyone can read
    match /app_settings/{settingId} {
      allow read: if true;
      allow write: if true; // Admin dashboard is password-protected at app level
    }

    // Moderation logs - authenticated users only
    match /moderation_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow unauthenticated users to read public data (optional)
    match /public/{document=**} {
      allow read: if true;
    }
  }
}
