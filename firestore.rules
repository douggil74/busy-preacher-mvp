rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Crisis alerts - only authenticated users can create, admins can read
    match /crisis_alerts/{alertId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Prayer requests - authenticated users can create and read
    match /prayer_requests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Allow unauthenticated users to read public data (optional)
    // Remove these if you want everything to require authentication
    match /public/{document=**} {
      allow read: if true;
    }
  }
}
