<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>
	<key>CFBundleDisplayName</key>
        <string>The Busy Christian</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UILaunchScreen</key>
	<dict>
		<key>UIImageName</key>
		<string>Splash</string>
		<key>UIImageRespectsSafeAreaInsets</key>
		<false/>
		<key>UIColorName</key>
		<string></string>
	</dict>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- Push Notifications -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
		<string>fetch</string>
	</array>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>

	<!-- User Notifications -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>We'd like to send you prayer reminders and daily devotional notifications to help you stay connected with God throughout your day.</string>

	<!-- Photo Library (for sharing study content) -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Allow The Busy Christian to save study notes and verses to your photo library for sharing.</string>

	<key>NSPhotoLibraryUsageDescription</key>
	<string>Allow The Busy Christian to access your photos to share study content.</string>

	<!-- Camera (for sharing) -->
	<key>NSCameraUsageDescription</key>
	<string>Allow The Busy Christian to use your camera to capture and share study moments.</string>

	<!-- Calendar (for prayer reminders) -->
	<key>NSCalendarsUsageDescription</key>
	<string>Allow The Busy Christian to add prayer reminders to your calendar.</string>

	<!-- Location (optional - for community features) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Your location helps us connect you with nearby prayer warriors and community groups.</string>

	<!-- Status bar style -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleLightContent</string>

	<!-- Prevent backup of sensitive data -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
</dict>
</plist>
